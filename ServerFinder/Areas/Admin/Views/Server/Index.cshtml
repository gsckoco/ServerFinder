@model IEnumerable<ServerFinder.Entities.TblServer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEcc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Storage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalStorage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectionSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bandwidth)
