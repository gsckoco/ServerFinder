            <td>
                @Html.DisplayFor(modelItem => item.ConnectionSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bandwidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCustomisable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessorCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessorNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
